@model EvCreating.Models.EventEvaluation

@{
    ViewData["Title"] = "Aanmaken";
}

<h1>Aanmaken</h1>

<h4>Event Evaluatie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReactieDatum" class="control-label"></label>
                <input asp-for="ReactieDatum" class="form-control" />
                <span asp-validation-for="ReactieDatum" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Waardering">Waardering:</label>
                <select asp-for="Waardering" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Waardering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inhoud" class="control-label"></label>
                <input asp-for="Inhoud" class="form-control" />
                <span asp-validation-for="Inhoud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeselecteerdEvenementId" class="control-label"></label>
                <select asp-for="GeselecteerdEvenementId" asp-items="@ViewBag.GeselecteerdEvenementen" class="form-control">
                    <option value="">Selecteer een evenement</option>
                </select>
                <span asp-validation-for="GeselecteerdEvenementId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar de lijst</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
