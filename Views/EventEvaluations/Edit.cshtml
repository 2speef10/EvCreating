@model EvCreating.Models.EventEvaluation
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Bewerken";
}

<h1>@_localizer["Bewerken"]</h1>

<h4>@_localizer["Event Evaluatie"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReactieDatum" class="control-label"></label>
                <input asp-for="ReactieDatum" class="form-control" />
                <span asp-validation-for="ReactieDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Waardering" class="control-label"></label>
                <input asp-for="Waardering" class="form-control" />
                <span asp-validation-for="Waardering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inhoud" class="control-label"></label>
                <input asp-for="Inhoud" class="form-control" />
                <span asp-validation-for="Inhoud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeselecteerdEvenementId" class="control-label"></label>
                <select asp-for="GeselecteerdEvenementId" class="form-control" asp-items="ViewBag.GeselecteerdEvenementId"></select>
                <span asp-validation-for="GeselecteerdEvenementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@_localizer["Opslaan"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["Terug naar lijst"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
