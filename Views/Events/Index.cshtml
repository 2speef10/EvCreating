@model IEnumerable<EvCreating.Models.Event>

@{
    ViewData["Title"] = "EVENEMENTEN";
}

<h1>Index</h1>

<form asp-action="Index" method="get">
    <label for="selectedMonth">Selecteer een maand:</label>
    <select id="selectedMonth" name="selectedMonth">
        <option value="">Alle maanden</option>
        <option value="1">Januari</option>
        <option value="2">Februari</option>
        <option value="3">Maart</option>
        <option value="4">April</option>
        <option value="5">Mei</option>
        <option value="6">Juni</option>
        <option value="7">Juli</option>

        <option value="8">Augustus</option>
        <option value="9">September</option>
        <option value="10">Oktober</option>
        <option value="11">November</option>
        <option value="12">December</option>
    </select>
    <button type="submit">Filter</button>
</form>

<p>
    <a asp-action="Create">Nieuw maken</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soort)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locatie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soort)
                </td>
                <td>
                    @if (User.IsInRole("SystemAdministrator"))
                    {
                   
                    <a asp-action="Edit" asp-route-id="@item.ID">Bewerken</a> 

                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.ID">Verwijderen</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
